{
  "linters": {
     "python-style": {
       "type": "pep8",
       "include": "(\\.py$)",
       "exclude": "(^external/)",
       "severity": {
        "E203": "disabled",
        "E251": "disabled",
        "W503": "disabled"
       },
       "flags": [
         "--max-line-length=120"
       ]
     },
     "python-lint": {
       "type": "script-and-regex",
       "include": "(\\.py$)",
       "exclude": "(^external/)",
       "script-and-regex.script": "./pylint3.sh",
       "script-and-regex.regex": "/^((?P<error>[EF])|(?P<warning>[W])|(?P<advice>[RC])):\\s+(?P<line>\\d+),\\s*(?P<char>\\d+): (?P<message>.*)$/m"
     }
   }
}
